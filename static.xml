<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>eaas-client</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target/${project.name}-${project.version}/</directory>
            <includes>
                <include>*.js</include>
            </includes>
            <outputDirectory></outputDirectory>
        </fileSet>

        <fileSet>
            <directory>target/${project.name}-${project.version}/guacamole</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>guacamole</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>resources/guacamole/layouts</directory>
            <includes>
                <include>*</include>
            </includes>
            <outputDirectory>guacamole/layouts</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
